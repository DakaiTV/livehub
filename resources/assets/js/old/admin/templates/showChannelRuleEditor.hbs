<table class="small-12">
	<thead>
	<tr>
		<th class="small-4">Type</th>
		<th class="small-7">Rules</th>
		<th class="small-1"></th>
	</tr>
	</thead>
	<tbody>
	{{#rules:i}}
		<tr>
			<td>
				<select value='{{.type}}' class="no-margin">
					<option selected disabled>Select a rule</option>
					<option value="title">Title Regex Matches</option>
					<option value="startBetween">Start Time Between</option>
				</select>
			</td>
			<td>
				{{#if .type == 'title'}}
					<input type="text" value="{{.rule}}" class="no-margin" required/>
				{{elseif .type == 'startBetween'}}
					<div class="checklist">
						Day:
						<label title="Monday"><input type="checkbox" name="{{.days}}" value="1"/> Mon</label>
						<label title="Tueday"><input type="checkbox" name="{{.days}}" value="2"/> Tue</label>
						<label title="Wednesday"><input type="checkbox" name="{{.days}}" value="3"/> Wed</label>
						<label title="Thursday"><input type="checkbox" name="{{.days}}" value="4"/> Thu</label>
						<label title="Friday"><input type="checkbox" name="{{.days}}" value="5"/> Fri</label>
						<label title="Saturday"><input type="checkbox" name="{{.days}}" value="6"/> Sat</label>
						<label title="Sunday"><input type="checkbox" name="{{.days}}" value="0"/> Sun</label>
					</div>
					<div class="row collapse">
						<div class="small-5 columns">
							<input type="time" value="{{.start}}" class="small-5" placeholder="HH:MM(:SS)"
							       pattern="^([01][0-9]|2[0-3]):([0-5][0-9])(?::([0-5][0-9]))?$" required/>
						</div>
						<div class="small-2 columns">
							<span class="prefix">and</span>
						</div>
						<div class="small-5 columns">
							<input type="time" value="{{.end}}" class="small-5" placeholder="HH:MM(:SS)"
							       pattern="^([01][0-9]|2[0-3]):([0-5][0-9])(?::([0-5][0-9]))?$" required/>
						</div>
					</div>
				{{else}}
					No settings available
				{{/if}}
			</td>
			<td>
				<button class="alert small no-margin" on-click="removeRule:{{i}}" type="button">x</button>
			</td>
		</tr>
	{{/rules}}
	</tbody>
	<tfoot>
	<tr>
		<th colspan="3">
			<a on-click="addRule">+ Add Rule</a>
		</th>
	</tr>
	</tfoot>
</table>

